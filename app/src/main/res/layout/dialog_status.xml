<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTopicDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/victor_mono_regular"
        android:paddingRight="16dp"
        android:text="Topic Status"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <TextView
        android:id="@+id/tvDescriptionDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/victor_mono_italic"
        android:text="Topic Description"
        app:layout_constraintStart_toStartOf="@+id/tvTopicDialog"
        app:layout_constraintTop_toBottomOf="@+id/tvSubjectDialog" />-->

    <TextView
        android:id="@+id/tvSubjectDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/victor_mono_italic"
        android:paddingRight="16dp"
        android:text="Subject"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvTopicDialog"
        app:layout_constraintTop_toBottomOf="@+id/tvTopicDialog" />

    <TextView
        android:id="@+id/tvProgressDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/victor_mono_italic"
        android:text="100%"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvTopicDialog"
        app:layout_constraintTop_toBottomOf="@+id/tvSubjectDialog" />

</androidx.constraintlayout.widget.ConstraintLayout>